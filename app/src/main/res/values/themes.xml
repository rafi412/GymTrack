<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GymTrack" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Estilo para Títulos de Día -->
    <style name="RoutineDayTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <!-- Puedes añadir personalizaciones aquí: color, tamaño, etc. -->
        <!-- <item name="android:textColor">?attr/colorPrimary</item> -->
    </style>

    <!-- Estilo para Texto de Ejercicio -->
    <style name="RoutineExerciseText" parent="TextAppearance.MaterialComponents.Body1">
        <!-- Personalizaciones -->
    </style>

    <!-- Estilo para "Sin días/ejercicios" -->
    <style name="RoutinePlaceholderText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>
</resources>